<% title "The Fashion - Products" %>
<div align="center">
<%= form_tag({:controller => "products", :action => "search"}, :method => "get") do%>


  <div class="field">
    <%= label_tag :category %><br />
    <%= select_tag :category, options_for_select(@categories, (@category.nil? ? "" : @category) ), include_blank: true %>
  </div>
    <br/>
  <div class="field">
    <%= label_tag :brand %><br />
    <%= select_tag :brand, options_for_select(@brands, (@brand.nil? ? "" : @brand)), include_blank: true %>
  </div>
    <br/>
    <br/>
  <div class="field">
    <%= label_tag :description, "Or type some search terms: <br/> eg. 'emporio armani bracelets'".html_safe %><br />
    <%= text_field_tag :description, '', :id => "description" %>
  </div>
  
  <% if false %>
  <!------
  <div class="field">
    <%= f.label :category %><br />
    <%= f.text_field :category %>
  </div>
  <div class="field">
    <%= f.label :color %><br />
    <%= f.text_field :color %>
  </div>
  <div class="field">
    <%= f.label :image %><br />
    <%= f.text_field :image %>
  </div>-->
  
  <% end %>
  <br/>
  <div class="actions">
    <%= submit_tag "Search products", :id => "button" %>
  </div>
<% end %>
</div>



<% if @products %>
<br/>
<div align="center"><%= link_to 'New search', '/products'%></div>
<div align="center"><p><%= @products.size%> products found</p></div>
<div class="products">  
	  <% for product in @products %>
	    <div class="product">
	      <p align="center"><strong><%= product.name %></strong></p>
	      <p align="center"><%= image_tag product.image, size: "250x250" %></p>
	      <p align="center">Brand: <strong><%= product.brand %></strong> <br/>
	      Color: <strong><%= product.color %></strong><br/>
	      Category: <strong><%= product.category_text %></strong></p>
	    </div>
	  <% end %>

</div>
<% end %>
